<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hacky_laptop.helloandroid.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/udacitylogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/udacity2"
            android:scaleType="fitStart"

            />






        <ImageView
            android:id="@+id/home"

            android:layout_width="50dp"
            android:layout_height="50dp"

            android:src="@drawable/home1"

            android:layout_marginLeft="25sp"
            android:layout_centerVertical="true"


            />





        <TextView
            android:id="@+id/udacitytext"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text = "Udacity"
            android:textSize="25sp"
            android:textColor="#8D6E63"

            android:fontFamily="@font/original"

            android:layout_toRightOf="@+id/home"
            android:layout_centerVertical="true"

            android:paddingLeft="20sp"

            />
        <ImageView

            android:id="@+id/phone"

            android:layout_width="45dp"
            android:layout_height="45dp"

            android:src="@drawable/phone2"

            android:layout_marginLeft="25sp"
            android:layout_marginTop="10sp"

            android:layout_below="@+id/home"
            />
        <TextView
            android:id="@+id/phonetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="650-555-5555"
            android:textSize="25sp"
            android:textColor="#8D6E63"
            android:fontFamily="@font/original"

            android:layout_toRightOf="@+id/phone"
            android:layout_below="@+id/home"

            android:paddingLeft="20sp"
            android:layout_marginTop="15dp"
            />

        <ImageView
            android:id="@+id/website"

            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/web2"

            android:layout_below="@+id/phone"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:textColor="#8D6E63"
            android:text="www.udacity.com"
            android:fontFamily="@font/original"

            android:paddingLeft="7dp"
            android:layout_marginTop="15dp"

            android:layout_below="@+id/phone"
            android:layout_toRightOf="@+id/website"


            />
        <ImageView
            android:id="@+id/map"

            android:layout_width="50dp"
            android:layout_height="40dp"

            android:src="@drawable/location"

            android:layout_below="@+id/website"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="2465 Latham St,Mountain View,CA 94043"
            android:textColor="#8D6E63"
            android:fontFamily="@font/original"
            android:textSize="17sp"

            android:paddingLeft="5dp"
            android:layout_marginTop="1dp"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/website"
            android:layout_toEndOf="@+id/map"
            android:layout_toRightOf="@+id/map"
            />



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
